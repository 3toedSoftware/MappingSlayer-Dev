{
    "name": "slayer-suite-debugger",
    "version": "1.0.0",
    "description": "Automated debugging tool for Slayer Suite",
    "type": "module",
    "main": "automated-debug.js",
    "scripts": {
        "dev": "http-server -p 8080 -c-1",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "debug": "node automated-debug.js",
        "debug-headless": "node -e \"const {runAutomatedDebugging, CONFIG} = require('./automated-debug.js'); CONFIG.headless = true; runAutomatedDebugging().catch(console.error);\"",
        "help": "cat CHEATSHEET.md",
        "cheat": "cat CHEATSHEET.md",
        "?": "cat CHEATSHEET.md",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky"
    },
    "dependencies": {
        "@svgdotjs/svg.js": "^3.2.0",
        "jszip": "^3.10.1",
        "opentype.js": "^1.3.4",
        "playwright": "^1.40.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "happy-dom": "^18.0.1",
        "http-server": "^14.1.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "vitest": "^3.2.4"
    },
    "keywords": [
        "debugging",
        "automation",
        "slayer-suite",
        "playwright"
    ],
    "author": "Debug Beast",
    "license": "MIT",
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,html,css}": [
            "prettier --write"
        ]
    }
}
